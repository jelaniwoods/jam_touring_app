            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='starts_onlteqPicker' data-target-input="nearest">
          <%= f.text_field :starts_on_lteq, :class => "form-control datetimepicker-input", :placeholder => "Starts on less than or equal to", :data => {:target => '#starts_onlteqPicker'} %>
          <div class="input-group-append" data-target='#starts_onlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#starts_ongteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#starts_onlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#starts_ongteqPicker').on("dp.change", function (e) {
