<%= search_form_for @q, :class => collapse_search_form, :id => "tours_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :ends_on, "Ends on" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='ends_ongteqPicker' data-target-input="nearest">
          <%= f.text_field :ends_on_gteq, :class => "form-control datetimepicker-input", :placeholder => "Ends on greater than or equal to", :data => {:target => '#ends_ongteqPicker'} %>
          <div class="input-group-append" data-target='#ends_ongteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='ends_onlteqPicker' data-target-input="nearest">
          <%= f.text_field :ends_on_lteq, :class => "form-control datetimepicker-input", :placeholder => "Ends on less than or equal to", :data => {:target => '#ends_onlteqPicker'} %>
          <div class="input-group-append" data-target='#ends_onlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#ends_ongteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#ends_onlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#ends_ongteqPicker').on("dp.change", function (e) {
              $('#ends_onlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#ends_onlteqPicker').on("dp.change", function (e) {
              $('#ends_ongteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :starts_on, "Starts on" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='starts_ongteqPicker' data-target-input="nearest">
