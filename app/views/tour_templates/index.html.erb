<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All tours
    </h1>

    <a href="/tours/new" class="btn btn-block btn-outline-secondary">
      Add a new tour
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "tour_templates/tours_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Starts on
        </th>

        <th>
          Ends on
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @tours.each do |tour| %>
      <tr>
        <td>
          <%= tour.id %>
        </td>

        <td>
          <%= tour.name %>
        </td>

        <td>
          <%= tour.starts_on %>
        </td>

        <td>
          <%= tour.ends_on %>
        </td>

        <td>
          <% if tour.user.present? %>
            <a href="/users/<%= tour.user.id %>">
              <%= tour.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(tour.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(tour.updated_at) %> ago
        </td>

        <td>
          <a href="/tours/<%= tour.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @tours, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
