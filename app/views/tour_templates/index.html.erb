<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All tours
    </h1>

    <a href="/tours/new" class="btn btn-block btn-outline-secondary">
      Add a new tour
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Starts on
        </th>

        <th>
          Ends on
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @tours.each do |tour| %>
      <tr>
        <!-- Display tour.id start -->
        <td>
          <%= tour.id %>
        </td>
        <!-- Display tour.id end -->

        <!-- Display tour.name start -->
        <td>
          <%= tour.name %>
        </td>
        <!-- Display tour.name end -->

        <!-- Display tour.starts_on start -->
        <td>
          <%= tour.starts_on %>
        </td>
        <!-- Display tour.starts_on end -->

        <!-- Display tour.ends_on start -->
        <td>
          <%= tour.ends_on %>
        </td>
        <!-- Display tour.ends_on end -->

        <!-- Display tour.user_id start -->
        <td>
          <%= tour.user.email %>
        </td>
        <!-- Display tour.user_id end -->

        <!-- Display tour.created_at start -->
        <td>
          <%= time_ago_in_words(tour.created_at) %> ago
        </td>
        <!-- Display tour.created_at end -->

        <!-- Display tour.updated_at start -->
        <td>
          <%= time_ago_in_words(tour.updated_at) %> ago
        </td>
        <!-- Display tour.updated_at end -->

        <td>
          <a href="/tours/<%= tour.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
