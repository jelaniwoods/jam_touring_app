<h1>
  Add a new tour
</h1>


<hr>

<form action="/create_tour" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control">
  </div>

  <div class="form-group">
    <label for="starts_on">
      Starts on
    </label>

    <input type="text" id="starts_on" name="starts_on" class="form-control">
  </div>

  <div class="form-group">
    <label for="ends_on">
      Ends on
    </label>

    <input type="text" id="ends_on" name="ends_on" class="form-control">
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create tour
  </button>
</form>

<hr>

<a href="/tours">
  Go back
</a>
