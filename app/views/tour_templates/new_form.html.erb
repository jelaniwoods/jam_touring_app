<h1>
  Add a new tour
</h1>


<hr>

<!-- Form tour start -->
<form action="/create_tour" method="post">
<!-- Form tour end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for starts_on start -->
  <div class="form-group">
    <label for="starts_on">
      Starts on
    </label>

    <!-- Input for starts_on start -->
    <input type="text" id="starts_on" name="starts_on" class="form-control">
    <!-- Input for starts_on end -->
  </div>
  <!-- Label and input for starts_on end -->

  <!-- Label and input for ends_on start -->
  <div class="form-group">
    <label for="ends_on">
      Ends on
    </label>

    <!-- Input for ends_on start -->
    <input type="text" id="ends_on" name="ends_on" class="form-control">
    <!-- Input for ends_on end -->
  </div>
  <!-- Label and input for ends_on end -->

  <!-- Label and input for user_id start -->
  <!-- Input for "user_id" start -->
  <input type="hidden" name="user_id" value="<%= current_user.id %>">
  <!-- Input for "user_id" end -->
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create tour
  </button>
</form>

<hr>

<a href="/tours">
  Go back
</a>
