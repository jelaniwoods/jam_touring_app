<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All locations
    </h1>

    <a href="/locations/new" class="btn btn-block btn-outline-secondary">
      Add a new location
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Arrives on
        </th>

        <th>
          Departs on
        </th>

        <th>
          Weather
        </th>

        <th>
          Exchange rate
        </th>

        <th>
          Local currency
        </th>

        <th>
          Tour
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @locations.each do |location| %>
      <tr>
        <!-- Display location.id start -->
        <td>
          <%= location.id %>
        </td>
        <!-- Display location.id end -->

        <!-- Display location.name start -->
        <td>
          <%= location.name %>
        </td>
        <!-- Display location.name end -->

        <!-- Display location.arrives_on start -->
        <td>
          <%= location.arrives_on %>
        </td>
        <!-- Display location.arrives_on end -->

        <!-- Display location.departs_on start -->
        <td>
          <%= location.departs_on %>
        </td>
        <!-- Display location.departs_on end -->

        <!-- Display location.weather start -->
        <td>
          <%= location.weather %>
        </td>
        <!-- Display location.weather end -->

        <!-- Display location.exchange_rate start -->
        <td>
          <%= location.exchange_rate %>
        </td>
        <!-- Display location.exchange_rate end -->

        <!-- Display location.local_currency start -->
        <td>
          <%= location.local_currency %>
        </td>
        <!-- Display location.local_currency end -->

        <!-- Display location.tour_id start -->
        <td>
          <% if location.tour.present? %>
            <a href="/tours/<%= location.tour.id %>">
              <%= location.tour.name %>
            </a>
          <% end %>
        </td>
        <!-- Display location.tour_id end -->

        <!-- Display location.created_at start -->
        <td>
          <%= time_ago_in_words(location.created_at) %> ago
        </td>
        <!-- Display location.created_at end -->

        <!-- Display location.updated_at start -->
        <td>
          <%= time_ago_in_words(location.updated_at) %> ago
        </td>
        <!-- Display location.updated_at end -->

        <td>
          <a href="/locations/<%= location.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @locations, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
